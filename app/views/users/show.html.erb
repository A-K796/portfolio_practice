<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h1><%= @user.name %></h1>
      <h2>新規投稿</h2>
      <%= form_with model:@movie, url:movies_path, local:true do |f| %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
      <h4>あらすじ</h4>
      <%= f.text_area :body %>
      <%= f.submit '投稿' %>
      <% end %>
    </div>
    <div class="col-xs-9">
      <h2>投稿した映画</h2>
      <h2>コメントした映画</h2>
    </div>
  </div>
</div>